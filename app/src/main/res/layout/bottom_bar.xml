<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp">

    <!--closet icon set-->
    <LinearLayout
        android:id="@+id/closet_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@color/blue"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="3dp">

        <ImageView
            android:id="@+id/bottom_bar_closet_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/txtTitle"
            android:scaleType="fitCenter"
            android:src="@drawable/closet"
            android:layout_weight="1"
            android:contentDescription="" />

        <TextView
            android:id="@+id/closetTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_bar_closet_button"
            android:text="Closet"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:typeface="serif"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <!--outfit generator icon set -->
    <LinearLayout
        android:id="@+id/outfitgen_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/closet_layout"
        android:layout_weight="1"
        android:background="@color/pink"
        android:orientation="vertical"
        android:padding="3dp">

        <ImageView
            android:id="@+id/bottom_bar_outfit_generator_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/txtTitle"
            android:layout_toRightOf="@+id/bottom_bar_closet_button"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/outfitgen" />

        <TextView
            android:id="@+id/outfitgenTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_bar_outfit_generator_button"
            android:layout_toRightOf="@+id/closetTitle"
            android:text="Outfit Generator"
            android:textAlignment="center"
            android:typeface="serif" />

    </LinearLayout>

    <!--lookbook icon set -->
    <LinearLayout
        android:id="@+id/lookbook_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/outfitgen_layout"
        android:layout_weight="1"
        android:background="@color/darkerblue"
        android:orientation="vertical"
        android:padding="3dp">

        <ImageView
            android:id="@+id/bottom_bar_lookbook_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/bottom_bar_outfit_generator_button"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:src="@drawable/lookbook" />

        <TextView
            android:id="@+id/lookbookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_bar_lookbook_button"
            android:layout_toRightOf="@+id/outfitgenTitle"
            android:text="Lookbook"
            android:textAlignment="center"
            android:typeface="serif" />

    </LinearLayout>

    <!--More icon set-->
    <LinearLayout
        android:id="@+id/more_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/lookbook_layout"
        android:layout_weight="1"
        android:background="@color/yellow"
        android:orientation="vertical"
        android:padding="3dp">

        <ImageView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/bottom_bar_lookbook_button"
            android:scaleType="fitCenter"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/more"/>

        <TextView
            android:id="@+id/moreTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more"
            android:layout_toRightOf="@+id/lookbookTitle"
            android:text="More"
            android:textAlignment="center"
            android:typeface="serif" />

    </LinearLayout>

</LinearLayout>
