<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1DAD6"
    android:orientation="vertical"
    tools:context="com.segfault.closetmanager.OutfitGenActivity">

    <LinearLayout
        android:id="@+id/imageButtons"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/doneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:background="#b7afa3"
                android:text="@string/doneButtonText"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/chooseForMeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1"
                android:background="#ACD1E9"
                android:text="@string/choose_for_me_button_text"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/accessoriesButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@mipmap/accessories"
            android:contentDescription="Top"
            android:cropToPadding="false"
            android:scaleType="center"/>

        <ImageButton
            android:id="@+id/topButton"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@mipmap/tops"
            android:contentDescription="Shirt/Top"/>

        <ImageButton
            android:id="@+id/bottomButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@mipmap/bottom"
            android:contentDescription="Pants/Bottom"/>

        <ImageButton
            android:id="@+id/shoesButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"

            android:layout_weight="1"
            android:background="@mipmap/shoes"
            android:contentDescription="Shoes"/>

    </LinearLayout>

    <include
        layout="@layout/bottom_bar"
        android:id="@+id/outfit_gen_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"/>


</LinearLayout>